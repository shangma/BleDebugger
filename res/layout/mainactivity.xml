<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:clickable="false"
            android:gravity="center_horizontal"
            android:shadowColor="#B0000000"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="5.0"
            android:text="BLE Debugger"
            android:textColor="#A1CAF1"
            android:textSize="35dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_ble"
            style="@style/ButtonOnMain"
            android:background="@drawable/btn_red"
            android:onClick="onBtnBLE"
            android:text="BLE" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_bluetooth"
            style="@style/ButtonOnMain"
            android:background="@drawable/btn_yellow"
            android:onClick="onBtnClassic"
            android:text="Classical" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_discover"
            style="@style/ButtonOnMain"
            android:background="@drawable/btn_green"
            android:onClick="onBtnDiscoverable"
            android:text="Discoverable" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_about"
            style="@style/ButtonOnMain"
            android:background="@drawable/btn_purple"
            android:onClick="onBtnAbout"
            android:text="About" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:paddingTop="10dip"
            android:text="Adatronics Inc.    www.adatronics.com"
            android:textColor="#F0E130"
            android:textSize="16dip" />
    </LinearLayout>

</LinearLayout>